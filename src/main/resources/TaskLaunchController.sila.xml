<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLA2Version="1.0" FeatureVersion="1.0" Originator="de.fau" Category="utilities" xmlns="http://www.sila-standard.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
    <Identifier>TaskLaunchController</Identifier>
    <DisplayName>Task Launch Controller</DisplayName>
    <Description>
        Exposes a command with constrained parameters for test purposes.
    </Description>

    <Command>
        <Identifier>StartTask</Identifier>
        <DisplayName>Start Task</DisplayName>
        <Description>Starts a program, task or script.</Description>
        <Observable>No</Observable>
        <Parameter>
            <Identifier>Executable</Identifier>
            <DisplayName>The binary or script to execute.</DisplayName>
            <Description>The binary which gets executed (e.g. "/usr/bin/python3", "C:\Programms\MyTask.exe").</Description>
            <DataType>
                <Basic>String</Basic>
            </DataType>
        </Parameter>
        <Parameter>
            <Identifier>ArgumentList</Identifier>
            <DisplayName>List of aruments to pass to the executable.</DisplayName>
            <Description>Arguments wich get passed to the executable (could be empty).</Description>
            <DataType>
                <Constrained>
                    <DataType>
                        <List>
                            <DataType>
                                <Basic>String</Basic>
                            </DataType>
                        </List>
                    </DataType>
                    <Constraints>
                        <MaximalElementCount>32</MaximalElementCount>
                    </Constraints>
                </Constrained>
            </DataType>
        </Parameter>
    </Command>
</Feature>